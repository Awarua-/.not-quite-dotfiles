#!/usr/bin/env bash

set -e

# zsh
echo "ğŸ  zsh..."
sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

echo "Setup me dev places"
mkdir -p dev

# nvm
echo "ğŸ  nvm..."
curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.33.2/install.sh | sudo bash

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

echo "â›‘  setting up node..."
nvm install --lts
nvm use --lts

echo "â›‘  updating npm to the latest and greatest..."
sudo npm -g install npm@latest

# run npm things
echo "â›‘  npm installing some stuff..."
npm install -g diff-so-fancy

echo "â›‘  update brew"
brew update

echo "â›‘  installing yarn"
brew install yarn

echo "â›‘  installing python"
brew install pyenv pyenv-virtualenv

echo "â›‘  log in to the npm repo"
echo "âš ï¸ âš ï¸ ğŸ‘‡ you will need to enter your staffId credentials"
npm login --registry=https://npm-private.atlassian.io --scope=atlassian

echo "â›‘  install micros-cli"
brew tap atlassian/micros ssh://git@stash.atlassian.com:7997/micros/micros-cli-homebrew-tap.git
brew install micros-cli

echo "Go go gadget"
brew install go
brew install dep

mkdir -p ~/dev/go/src

